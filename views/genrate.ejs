    <form style="margin-bottom:2rem; margin-left: 3rem;" action="/add" method="post">
        <h1>Add Questions</h1>
        <br>

        <div><label class = "form-label" for="QuesCount">Ques No :</label>
           <input class = "form-control" name = "id" type = "number" value=<%- Qcount  %>></input>
        </div>
        <br>
        <div> <label class = "form-label" for="Ques-Type">Ques-Type :</label>

            <select class="form-select" aria-label="Default select example" type = "text" name="QuesType">
                <option selected>Open this select menu</option>
                <option>MCQ</option>
                <option>TRUE-FALSE</option>
                <option>FILL IN THE BLANKS</option>
                <option>ILLUSTRATE</option>
                <option>EXPLAIN WITH DIAGRAM</option>
                <option>DEFINE</option>
            </select>
        </div>
        <br>
        <div><label class = "form-label" for="QuesUnit">Ques Unit :</label>
            <input class = "form-control" name="QuesUnit" type ="number"></input>
         </div>
        <br>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label" >Enter the Question :</label>
            <textarea class="form-control" id="exampleInputPassword1" type="text" name="Question"></textarea>
          </div>
          <br>
          <div class="mb-3">
            <label for="exampleFormControlFile1">Image (Optional) :</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
          </div>
        <br>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label" >Marks :</label>
            <input  class="form-control" id="exampleInputPassword1" type="number" name="QuesMarks">
          </div>
        <br>
    
        <p>
            <button type="submit" class="btn btn-primary">Next Question</button>
        </p>
        <br>
    </form>

    <form style="margin-bottom:2rem; margin-left: 42%;" action = "/next" method = "post">
        <p>
            <button type="submit" class="btn btn-primary">Genrate Paper</button>
        </p>
    </form>
   
